@model Weather.Application.ViewModels.LocationViewModel

@section head {
    @Styles.Render("~/Content/jqueryui")
}

@{
    if (TempData["error"] != null)
    {
        @Html.Partial("ErrorMessage");
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, String.Empty, new { @class = "text-danger" })
        @Html.ValidationMessageFor(model => model.Name, String.Empty, 
        new { @class = "text-danger col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2" })
    <div class="formwrapper col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="locationcontrols">
            <div class="col-sm-4 col-sm-offset-1 col-md-4 col-md-offset-1 col-lg-4 col-lg-offset-1">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "locationinput", size = "70" } })
            </div>
            <div class="submitWrapper col-sm-4 col-sm-offset-2 col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
                <input type="submit" value="Go fetch!" class="submitlocation btn btn-primary btn-xs" />
            </div>
        </div>
        <div class="courtesy col-sm-12  col-md-12 col-lg-12">
            <p class="courtesytext">Open Web API: http://www.worldweatheronline.com - http://www.geonames.org</p>
        </div>
    </div>
}
@Html.Partial("SearchResultListView")

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/ajax")
}


